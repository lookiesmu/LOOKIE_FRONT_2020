<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".week04">

    <fragment
        android:id="@+id/Frag1"
        android:name="com.example.myapplication01.FragOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/frag1" />

    <fragment
        android:id="@+id/Frag2"
        android:name="com.example.myapplication01.FragTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/frag2" />

    <fragment
        android:id="@+id/Frag3"
        android:name="com.example.myapplication01.FragThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/frag3" />

    <fragment
        android:id="@+id/Frag4"
        android:name="com.example.myapplication01.FragFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/frag4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="토끼"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#399F3D"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="고슴도치"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#FD5454"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="고양이"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#F8B416"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거북이"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#3786CC"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="#B3B2B2"/>


</LinearLayout>